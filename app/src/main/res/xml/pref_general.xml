<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:title="Sort Type"
        android:key="@string/pref_sort_key"
        android:defaultValue="@string/pref_sort_default"
        android:entries="@array/pref_sort_list"
        android:entryValues="@array/pref_sort_keys"
        />
    <EditTextPreference
        android:title="Vote Count"
        android:key="@string/pref_vote_count"
        android:defaultValue="@string/pref_vote_count_default"
        android:inputType="number"
        android:singleLine="true"/>

</PreferenceScreen>